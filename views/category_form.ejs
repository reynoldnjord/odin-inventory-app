<section>
	<h1><%= title %></h1>

	<form action="" method="POST">
		<div class="form-wrapper">
			<div class="form-elem-wrapper">
				<label for="name">Category</label>
				<input
					required
					type="text"
					id="name"
					name="name"
					value="<%= typeof category == 'undefined' ? '':category.name %> "
				/>
			</div>
			<div class="form-elem-wrapper">
				<label for="description">Description</label>
				<textarea
					name="description"
					id="description"
					cols="30"
					rows="10"
					required
				>
<%= typeof category == 'undefined'? '':category.description %> </textarea
				>
			</div>
			<div class="btn-wrapper">
				<button class="classic-btn" type="submit">Submit</button>
				<a href="/catalog/categories"
					><button class="classic-btn" type="button">Cancel</button></a
				>
			</div>
		</div>
	</form>

	<% if(typeof errors !='undefined'){ %>
	<ul>
		<% errors.forEach(err=>{%>
		<li><%=err.msg %></li>
		<% }) %>
	</ul>
	<% } %>
</section>
